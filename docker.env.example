# ==================== DOCKER ENVIRONMENT CONFIGURATION ====================
# This file contains environment variables optimized for Docker deployment
# Copy this to .env and update the values as needed

# ==================== DATABASE CONFIGURATION ====================

# MongoDB Configuration
MONGO_URI=mongodb://admin:password@mongodb:27017/decode?authSource=admin
MONGO_DB_NAME=decode
MONGO_USER=admin
MONGO_PASSWORD=password

# Redis Configuration
REDIS_URI=redis://redis:6379/0
REDIS_PASSWORD=

# Neo4j Configuration
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# RabbitMQ Configuration
RABBITMQ_URI=amqp://admin:password@rabbitmq:5672/
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=password
RABBITMQ_VHOST=/

# ==================== JWT SECRETS ====================
# IMPORTANT: Change these secrets in production!

JWT_ACCESS_TOKEN_SECRET=DecodeNetwork2025Access
JWT_SESSION_TOKEN_SECRET=DecodeNetwork2025Refresh
JWT_SERVICE_TOKEN_SECRET=DecodeNetwork2025ServicesCommunication

# ==================== OTP ENCRYPTION ====================
OTP_ENCRYPT_SECRET=DecodeNetwork2025OtpSecret

# ==================== SMTP CONFIGURATION ====================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=decodenetwork.web3@gmail.com
SMTP_PASS=your_smtp_password_here

# ==================== FRONTEND CONFIGURATION ====================
FRONTEND_URL=https://app.decodenetwork.app/

# ==================== SERVICE PORTS ====================
# These ports are used inside Docker containers
# External ports are mapped in docker-compose.yml

API_GATEWAY_PORT=4000
AUTH_PORT=4001
USER_PORT=4002
EMAIL_PORT=4003
RELATIONSHIP_PORT=4004
WALLET_PORT=4005
NOTIFICATION_PORT=4006
NEO4JDB_SYNC_PORT=4007

# ==================== SERVICE HOSTS ====================
# Use service names for internal Docker communication
API_GATEWAY_HOST=0.0.0.0
AUTH_HOST=0.0.0.0
USER_HOST=0.0.0.0
EMAIL_HOST=0.0.0.0
RELATIONSHIP_HOST=0.0.0.0
WALLET_HOST=0.0.0.0
NOTIFICATION_HOST=0.0.0.0
NEO4JDB_SYNC_HOST=0.0.0.0

# ==================== EXTERNAL SERVICE URLS ====================
# These are used for service-to-service communication within Docker

# Auth Service URLs
AUTH_SERVICE_URL=http://auth:4001
USER_SERVICE_URL=http://user:4002
WALLET_SERVICE_URL=http://wallet:4005
RELATIONSHIP_SERVICE_URL=http://relationship:4004
NOTIFICATION_SERVICE_URL=http://notification:4006
EMAIL_SERVICE_URL=http://email-worker:4003

# ==================== NODE ENVIRONMENT ====================
NODE_ENV=production

# ==================== LOGGING ====================
LOG_LEVEL=info

# ==================== HEALTH CHECK CONFIGURATION ====================
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=10000
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=40000
